<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/common_margin"
    android:background="@color/color_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_square_item_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/color_black_text"
            android:textSize="@dimen/text_common_item_content" />

        <TextView
            android:id="@+id/tv_square_item_usertype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text=""
            android:textColor="@color/color_yellow"
            android:textSize="@dimen/text_common_item_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_square_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/color_gray"
        android:textSize="@dimen/text_common_item_content" />

    <TextView
        android:id="@+id/tv_square_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/common_tv_chat"
        android:padding="5dp"
        android:text=""
        android:textColor="@color/color_black_text"
        android:textSize="@dimen/text_common_item_title" />
</LinearLayout>