<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_popwinshare_content"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    >
    <LinearLayout
        android:id="@+id/ll_popwinshare_qq"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/common_ll_bg"
        >
        <ImageView
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:src="@drawable/ic_share_qq"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QQ"
            android:textSize="@dimen/text_common_item_content"
            android:textColor="@color/color_black_text"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_popwinshare_wx"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/common_ll_bg"
        >
        <ImageView
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:src="@drawable/ic_share_wx"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信好友"
            android:textSize="@dimen/text_common_item_content"
            android:textColor="@color/color_black_text"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_popwinshare_wxsquare"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/common_ll_bg"
        >
        <ImageView
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:src="@drawable/ic_share_wxsquare"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="朋友圈"
            android:textSize="@dimen/text_common_item_content"
            android:textColor="@color/color_black_text"
            />
    </LinearLayout>
</LinearLayout>