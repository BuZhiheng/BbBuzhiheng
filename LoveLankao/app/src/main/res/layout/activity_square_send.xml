<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_title_height"
        android:background="@color/color_green">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="发表说说"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_main_title" />

        <ImageView
            android:id="@+id/iv_squaresend_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/common_margin"
            android:src="@drawable/ic_common_back_white" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/common_margin"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_square_send_content"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="5dp"
            android:background="@drawable/common_tv_chat"
            android:gravity="top" />

        <ImageView
            android:id="@+id/iv_square_choose_photo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_square_camera_c"
            />

        <Button
            android:id="@+id/btn_square_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/common_tv_chat"
            android:text="发表"
            android:textColor="@color/color_green"
            />
    </LinearLayout>
</LinearLayout>
