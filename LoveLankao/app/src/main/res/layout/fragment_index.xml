<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_title_height"
        android:background="@color/color_green">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/main_index"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_main_title" />
    </FrameLayout>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl_index_frm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <com.bigkoo.convenientbanner.ConvenientBanner
                    android:id="@+id/banner_indexfrm"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:canLoop="true"/>
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:layout_marginTop="@dimen/common_margin"
                    >
                    <LinearLayout
                        android:id="@+id/ll_indexfrm_service"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"/>
                </HorizontalScrollView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="vertical">
                    <include layout="@layout/include_slid_img_height10"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="menu"/>
                </LinearLayout>
                <include layout="@layout/include_slid_img_height10"/>
                <FrameLayout
                    android:id="@+id/fl_indexfrm_more_news"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/common_ll_bg"
                    android:paddingBottom="@dimen/common_margin"
                    android:paddingTop="@dimen/common_margin"
                    android:clickable="true">
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/common_margin"
                        android:text="兰考新闻"
                        android:textSize="@dimen/text_common_item_title"
                        android:textColor="@color/color_black_text"
                        />
                    <TextView
                        android:layout_gravity="center_vertical|right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:text="查看更多"
                        android:textSize="@dimen/text_common_item_title"
                        android:textColor="@color/color_green"
                        />
                    <ImageView
                        android:layout_gravity="center_vertical|right"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="@dimen/common_margin"
                        android:src="@drawable/ic_common_right_green"/>
                </FrameLayout>
                <include layout="@layout/include_slid_img"/>
                <LinearLayout
                    android:id="@+id/ll_indexfrm_news"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                </LinearLayout>
                <include layout="@layout/include_slid_img_height10"/>
                <FrameLayout
                    android:id="@+id/fl_indexfrm_more_hots"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/common_ll_bg"
                    android:paddingBottom="@dimen/common_margin"
                    android:paddingTop="@dimen/common_margin"
                    android:clickable="true"
                    >
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/common_margin"
                        android:text="今日热点"
                        android:textSize="@dimen/text_common_item_title"
                        android:textColor="@color/color_black_text"
                        />
                    <TextView
                        android:layout_gravity="center_vertical|right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:text="查看更多"
                        android:textSize="@dimen/text_common_item_title"
                        android:textColor="@color/color_green"
                        />
                    <ImageView
                        android:layout_gravity="center_vertical|right"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="@dimen/common_margin"
                        android:src="@drawable/ic_common_right_green"/>
                </FrameLayout>
                <include layout="@layout/include_slid_img"/>
                <LinearLayout
                    android:id="@+id/ll_indexfrm_hots"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                </LinearLayout>
                <include layout="@layout/include_slid_img_height10"/>
                <FrameLayout
                    android:id="@+id/fl_indexfrm_more_read"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/common_ll_bg"
                    android:paddingBottom="@dimen/common_margin"
                    android:paddingTop="@dimen/common_margin"
                    android:clickable="true">
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/common_margin"
                        android:text="精品阅读"
                        android:textSize="@dimen/text_common_item_title"
                        android:textColor="@color/color_black_text"
                        />
                    <TextView
                        android:layout_gravity="center_vertical|right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:text="查看更多"
                        android:textSize="@dimen/text_common_item_title"
                        android:textColor="@color/color_green"
                        />
                    <ImageView
                        android:layout_gravity="center_vertical|right"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="@dimen/common_margin"
                        android:src="@drawable/ic_common_right_green"/>
                </FrameLayout>
                <include layout="@layout/include_slid_img"/>
                <LinearLayout
                    android:id="@+id/ll_indexfrm_read"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>