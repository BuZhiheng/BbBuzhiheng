<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_margin"
        >
        <LinearLayout
            android:id="@+id/ll_mainfrm_header_meishi"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/common_ll_bg"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="@dimen/ic_mainfrm_title"
                android:layout_height="@dimen/ic_mainfrm_title"
                android:src="@drawable/ic_mainfrm_meishi"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/text_mainfrm_meishi"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_mainfrm_header_gouwu"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/common_ll_bg"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="@dimen/ic_mainfrm_title"
                android:layout_height="@dimen/ic_mainfrm_title"
                android:src="@drawable/ic_mainfrm_gouwu"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/text_mainfrm_gouwu"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_mainfrm_header_jiudian"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/common_ll_bg"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="@dimen/ic_mainfrm_title"
                android:layout_height="@dimen/ic_mainfrm_title"
                android:src="@drawable/ic_mainfrm_jiudian"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/text_mainfrm_jiudian"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_mainfrm_header_xiuxian"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/common_ll_bg"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="@dimen/ic_mainfrm_title"
                android:layout_height="@dimen/ic_mainfrm_title"
                android:src="@drawable/ic_mainfrm_xiuxian"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/text_mainfrm_xiuxian"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_mainfrm_header_liren"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/common_ll_bg"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="@dimen/ic_mainfrm_title"
                android:layout_height="@dimen/ic_mainfrm_title"
                android:src="@drawable/ic_mainfrm_liren"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/text_mainfrm_liren"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:paddingLeft="@dimen/common_margin"
        android:paddingRight="@dimen/common_margin"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/ll_mainfrm_header_hunqing"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/common_ll_bg"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="@dimen/ic_mainfrm_title"
                android:layout_height="@dimen/ic_mainfrm_title"
                android:src="@drawable/ic_mainfrm_hunqing"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/text_mainfrm_hunqing"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_mainfrm_header_xiyu"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/common_ll_bg"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="@dimen/ic_mainfrm_title"
                android:layout_height="@dimen/ic_mainfrm_title"
                android:src="@drawable/ic_mainfrm_xiyu"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/text_mainfrm_xiyu"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_mainfrm_header_meijia"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/common_ll_bg"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="@dimen/ic_mainfrm_title"
                android:layout_height="@dimen/ic_mainfrm_title"
                android:src="@drawable/ic_mainfrm_meijia"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/text_mainfrm_meijia"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_mainfrm_header_ktv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/common_ll_bg"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="@dimen/ic_mainfrm_title"
                android:layout_height="@dimen/ic_mainfrm_title"
                android:src="@drawable/ic_mainfrm_ktv"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/text_mainfrm_ktv"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_mainfrm_header_other"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/common_ll_bg"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="@dimen/ic_mainfrm_title"
                android:layout_height="@dimen/ic_mainfrm_title"
                android:src="@drawable/ic_mainfrm_other"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/text_mainfrm_other"
                />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_bg"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_margin"
        android:text="热门活动"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_mainfrm_header_conpon"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="60dp"
                android:layout_height="39dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_mainfrm_conpon"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="今日特惠"
                android:textSize="@dimen/text_main_title"
                android:textColor="@color/color_gray_deep"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_mainfrm_conponlit"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="天天特价,爆款不打烊"
                android:textSize="@dimen/text_common_item_content"
                android:textColor="@color/color_gray_deep"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_bg"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/tv_mainfrm_open"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:gravity="center"
                android:drawableRight="@drawable/ic_mainfrm_open"
                android:text="开业大酬宾"
                android:textSize="@dimen/text_main_title"
                android:textColor="@color/color_gray_deep"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_bg"/>
            <TextView
                android:id="@+id/tv_mainfrm_tuiian"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:gravity="center"
                android:drawableLeft="@drawable/ic_mainfrm_tuijian"
                android:text="精品推荐"
                android:textSize="@dimen/text_common_item_title"
                android:textColor="@color/color_gray_deep"
                />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_bg"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_margin"
        android:text="猜你喜欢"
        />
</LinearLayout>