<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_title_height"
        android:background="@color/color_green"
        >
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_talk"
            android:textSize="@dimen/text_main_title"
            android:textColor="@color/color_white"
            />
    </FrameLayout>
    <include layout="@layout/include_slid_img_height10"/>
    <FrameLayout
        android:id="@+id/fl_talkfrm_chatroom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/common_ll_bg"
        android:clickable="true"
        >
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="@dimen/common_margin"
            android:src="@drawable/ic_talk_chatroom"
            />
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="聊天室"
            android:textSize="@dimen/text_common_item_title"
            android:textColor="@color/color_black_text"
            />
        <TextView
            android:layout_gravity="center_vertical|right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="39dp"
            android:text="兰考人都在这呢,不来你就out了"
            android:textSize="@dimen/text_common_item_content"
            android:textColor="@color/color_gray_deep"
            />
        <ImageView
            android:layout_gravity="center_vertical|right"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="@dimen/common_margin"
            android:src="@drawable/ic_common_right_green"/>
    </FrameLayout>
    <include layout="@layout/include_slid_img_marginleft"/>
    <FrameLayout
        android:id="@+id/fl_talkfrm_square"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/common_ll_bg"
        android:clickable="true"
        >
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="@dimen/common_margin"
            android:src="@drawable/ic_talk_quan"
            />
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="兰考圈"
            android:textSize="@dimen/text_common_item_title"
            android:textColor="@color/color_black_text"
            />
        <TextView
            android:layout_gravity="center_vertical|right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="39dp"
            android:text="看看他们在吐槽什么"
            android:textSize="@dimen/text_common_item_content"
            android:textColor="@color/color_gray_deep"
            />
        <ImageView
            android:layout_gravity="center_vertical|right"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="@dimen/common_margin"
            android:src="@drawable/ic_common_right_green"/>
    </FrameLayout>
    <include layout="@layout/include_slid_img_height10"/>
</LinearLayout>